        customerName: 'Syarikat ABC Sdn Bhd',
        amount: 2500.00,
        status: 'active',
        date: '2024-01-15',
        paymentMethod: 'Bank Transfer'
      },
      {
        id: 2,
        receiptNumber: 'RCP-2024-002',
        customerName: 'XYZ Enterprise',
        amount: 1800.50,
