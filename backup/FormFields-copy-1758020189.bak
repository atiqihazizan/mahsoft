// Radio Group component
export const RadioGroup = ({ 
  name, 
  value, 
  onChange, 
  options = [], 
  disabled = false,
  className = "",
  ...props 
}) => (
  <div className={`space-y-2 ${className}`}>
    {options.map((option, index) => (
      <Radio
        key={index}
        name={name}
        value={option.value}
        checked={value === option.value}
        onChange={onChange}
        label={option.label}
        disabled={disabled}
        {...props}
      />
    ))}
  </div>
)

