// Description Field component (enhanced textarea with formatting)
export const DescriptionField = ({ 
  value, 
  onChange, 
  label = "", 
  placeholder = "", 
  required = false, 
  disabled = false,
  rows = 4,
  className = "",
  ...props 
}) => (
  <div className={className}>
    {label && (
      <Label required={required}>
        {label}
      </Label>
    )}
    <Textarea
      value={value || ''}
      onChange={onChange}
      placeholder={placeholder}
      required={required}
      disabled={disabled}
      rows={rows}
      className="resize-none"
      {...props}
    />
  </div>
)